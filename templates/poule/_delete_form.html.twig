{% if app.user.getUsername() == "Admin" %}
    {% set message = "Weet je zeker dat je de resultaten wilt verwijderen?" %}
{% else %}
    <{% set message = "Weet je zeker dat je deze stem wilt verwijderen?" %}
{% endif %}
<form method="post" action="{{ path('poule_delete', {'id': poule.id}) }}" onsubmit="return confirm('{{ message }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poule.id) }}">
    <button class="btn">Delete</button>
</form>
