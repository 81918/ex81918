{% extends 'base.html.twig' %}

{% block title %}Stem index{% endblock %}

{% block body %}
    <h1>Stem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stem in stems %}
            <tr>
                <td>{{ stem.id }}</td>
                <td>
                    <a href="{{ path('stem_show', {'id': stem.id}) }}">show</a>
                    <a href="{{ path('stem_edit', {'id': stem.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stem_new') }}">Create new</a>
{% endblock %}
